<h4 class="text-center">Make a post for others to see!</h4>
<div ng-show="error" class="alert alert-danger text-center">{{errorMessage}}</div>
<div ng-hide="error" class="col-sm-6 col-sm-offset-3">
  
  <form class="form" ng-submit="post()">

    <div class="form-group">
      <label>Message</label><br>
      <textarea id="messageTextArea" placeholder="Write a message to post to the Event Wall!" rows="4" cols="30" required></textarea>
    </div>

    <div class="form-group">
      <label>Photo</label><br>
      <input id="my-form" type="hidden" role="uploadcare-uploader"
       data-crop=""
       data-images-only="true" />
    </div>
    <div>
        <button type="submit" class="btn btn-default" ng-disabled="disabled">Submit</button>
    </div>
  </form>
</div>

