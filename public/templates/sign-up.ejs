<div id="signup" class="authtemplate">
  <div class="container">
    <div class="form-wrapper page-form">
      <h1>CREATE YOUR EVENT WALL ACCOUNT</h1>
      <div ng-show="error" class="alert alert-danger text-center">{{errorMessage}}</div>
      <form class="form" ng-submit="register()">
        <div class="form-group">
          <label><i class="fa fa-user"></i></label>
          <input type="text" name="username" ng-model="registerForm.username" required>
        </div>
        <div class="form-group">
          <label><i class="fa fa-lock"></i></label>
            <input type="password" name="password" ng-model="registerForm.password" required>
          </div>
          <div class="button-wrapper">
            <button type="submit" ng-disabled="disabled">Register</button>
          </div>
      </form>
    </div>
      <!-- form-wrapper -->

  </div>
    <!-- container -->

</div>
